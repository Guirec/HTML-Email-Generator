// Prevent Webkit and Windows Mobile platforms from changing default font sizes
body
    width 100%
    margin 0
    padding 0
    -webkit-text-size-adjust 100%
    -ms-text-size-adjust 100%

td
    font-family Arial, sans-serif
    font-size 14px
    line-height 20px
    color #333333

// Some trouble with iOS who creates blue links over phone numbers, dates and addresses ?
// Check that: https://litmus.com/blog/remove-blue-links-ios
a
    text-decoration underline
    color #4b85bd

    img
        border none

// Some sensible defaults for images
img
    text-decoration none
    outline none
    -ms-interpolation-mode bicubic

// Gmail and Outlook.com unwantedly adds in an extra space below images when using non IE browsers
// You may not always want all of your images to be block elements
// Apply the "image_fix" class to any image you need to fix
.image_fix
    display block

// resolves webkit padding issue
table
    border-spacing 0

    // Outlook 07, 10 Padding issue fix
    td
        vertical-align top
        border-collapse collapse

body
.wrapper
.center
    background-color #ebebeb

.center
    padding 20px 0

.container-inner
    padding 20px 25px
    background-color #ffffff

.title
    font-size 18px
    font-weight bold
    line-height 24px
    color #c21f52

.subtitle
    font-size 15px
    font-weight bold
    line-height 20px
    color #c21f52

.code
    font-family Andale Mono, Courier, monospace
    color #666666

.force-col
    padding-right 20px

    &:last-child
        padding-right 0
